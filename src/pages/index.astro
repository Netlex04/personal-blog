	</body>
	<script>
        const bg = document.querySelector('.background')
        const leftLatern = document.querySelector('.left-latern')
        const rightLatern = document.querySelector('.right-latern')
        const moving = document.querySelector('.moving')

        window.addEventListener('scroll', () => {
            console.log(window.pageYOffset, window.innerHeight);

            const move = window.pageYOffset / window.innerHeight * window.innerHeight * 0.5

            console.log(move);

            // moving.style.transform = `translateX(-50%) translateY(-${move}px)`
            // moving.style.setProperty('--move', `-${move}px`)
            moving.animate({
                transform: `translateY(-${move}px)`
            }, {
                duration: 3000, fill: "forwards"
            })
            leftLatern.animate({
                transform: `translateY(-${move * 0.3}px)`
            }, {
                duration: 3000, fill: "forwards"
            })
            rightLatern.animate({
                transform: `translateY(-${move * 0.5}px)`
            }, {
                duration: 3000, fill: "forwards"
            })
            bg.animate({
                backgroundPositionY: `-${move * 0.2}px`,
                // transform: `translateY(-${move * 0.2}px)`
            }, {
                duration: 3000, fill: "forwards"
            })
        })

		const gradientCard = document.querySelector('.card.move')
        const tiltSection = document.getElementById('tilt-section')

        gradientCard.onmousemove = (e) => {
            const { currentTarget: target } = e

            let x = e.offsetX,
                y = e.offsetY

            target.style.setProperty("--mouse-x", `${x}px`)
            target.style.setProperty("--mouse-y", `${y}px`)
        }

    </script>
